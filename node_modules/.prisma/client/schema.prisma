generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define o modelo para os clientes
model Customer {
  id        String        @id @default(uuid()) // ID do cliente
  cpf       String        @unique // CPF do cliente
  name      String // Nome do cliente
  statement Transaction[] // Transações do cliente
}

// Define o modelo para as transações
model Transaction {
  id          String   @id @default(uuid()) // ID da transação
  description String // Descrição da transação
  amount      Float // Valor da transação
  create_at   DateTime // Data e hora da transação
  type        String // Tipo da transação: "Credit" ou "Debit"
  customer    Customer @relation(fields: [customerId], references: [id]) // Cliente associado à transação
  customerId  String   @map("customer_id") // Chave estrangeira para o cliente
}
